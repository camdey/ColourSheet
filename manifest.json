{
  "name": "ColourSheet",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Generates Google Spreadsheet with Custom Colour Palette",
  "background": {
    "scripts": ["background/background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19": "images/gsheets_icon_19.png",
      "38": "images/gsheets_icon_38.png"
      }
  },

  "icons": {
    "16": "images/gsheets_icon_16.png",
    "32": "images/gsheets_icon_32.png",
    "48": "images/gsheets_icon_48.png"
  },

  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}
